# Payload CMS Configuration
PAYLOAD_SECRET=your-secure-payload-secret-key-min-32-chars
DATABASE_URI=postgresql://user:password@localhost:5432/payload_db

# Port Configuration
PORT=3001
ADMIN_URL=http://localhost:3001/admin

# Zitadel Integration
ZITADEL_API_URL=https://your-zitadel-instance.com
ZITADEL_ISSUER=https://your-zitadel-instance.com
ZITADEL_CLIENT_ID=your-client-id
ZITADEL_CLIENT_SECRET=your-client-secret
ZITADEL_ADMIN_USERNAME=your-admin-username
ZITADEL_ADMIN_PASSWORD=your-admin-password

# GraphQL Configuration
GRAPHQL_ENABLED=true
GRAPHQL_ENDPOINT=/graphql

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,https://yourdomain.com

# Environment
NODE_ENV=development
